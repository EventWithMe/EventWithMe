<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="400dp"
    android:layout_height="600dp">

    <EditText
        android:id="@+id/editTextStart"
        android:layout_width="107dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button1"
        android:layout_below="@+id/editTextSearch"
        android:layout_marginStart="4dp"
        android:layout_marginTop="98dp"
        android:layout_marginBottom="51dp"
        android:layout_toEndOf="@+id/editTextCityName"
        android:ems="10"
        android:hint="start date"
        android:inputType="textPersonName"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/editTextEnd"
        android:layout_width="107dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button1"
        android:layout_below="@+id/editTextSearch"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="101dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="48dp"
        android:layout_toEndOf="@+id/editTextStart"
        android:ems="10"
        android:hint="end date"
        android:inputType="textPersonName"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="121dp"
        android:layout_marginBottom="266dp"
        android:minHeight="48dp"
        android:text="Search" />

    <TextView
        android:id="@+id/textViewDisplayStart"
        android:layout_width="102dp"
        android:layout_height="44dp"
        android:layout_below="@+id/editTextCityName"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="58dp"
        android:layout_marginTop="102dp"
        android:layout_marginEnd="251dp"
        android:layout_marginBottom="173dp" />

    <EditText
        android:id="@+id/editTextSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:hint="Search for artist venues and events"
        android:inputType="textPersonName"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/editTextCityName"
        android:layout_width="131dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button1"
        android:layout_below="@+id/editTextSearch"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="94dp"
        android:layout_marginBottom="53dp"
        android:ems="10"
        android:hint="City/zip-code"
        android:inputType="textPersonName"
        android:minHeight="48dp" />
</RelativeLayout>